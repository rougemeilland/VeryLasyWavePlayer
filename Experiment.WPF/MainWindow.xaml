<Window x:Class="Experiment.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experiment.WPF"
        mc:Ignorable="d"
        Title="MainWindow">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBlock Text="ペーストされたテキスト: "/>
            <TextBlock x:Name="PastedText"/>
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="Paste" Width="50" Height="20" Click="Button_Click"/>
    </DockPanel>
</Window>
